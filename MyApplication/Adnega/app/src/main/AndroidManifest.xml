<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agend.adnega">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".agendas.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".agendadetail.AgendaDetailActivity"
            android:label="@string/title_activity_agenda_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addeditagenda.AddEditAgendaActivity"
            android:label="@string/title_activity_add_edit_agenda"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>